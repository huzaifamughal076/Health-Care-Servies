<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activities.ChatsSettingActivity">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:keepScreenOn="true">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background">

            <ImageView
                android:id="@+id/chat_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_baseline_arrow_back_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Chats"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Display"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ThemeImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="Icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_hemebright" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/ThemeImage"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Theme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:text="Theme"
                            android:textColor="@color/black"
                            android:textColorHint="#B50101"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/ThemeSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/Theme"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/ThemeImage"
                            android:hint="System default"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="12sp" />


                    </LinearLayout>


                </RelativeLayout>
















                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/WallpaperImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="Icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_wallpaper" />

                    <TextView
                        android:id="@+id/WallpaperText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@+id/WallpaperImage"
                        android:text="Wallpaper"
                        android:textColor="@color/black"
                        android:textColorHint="#B50101"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#878686"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat settings"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"/>


                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="?android:attr/listPreferredItemHeightLarge">
                    <ImageView
                        android:id="@+id/EnterIsSendImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:contentDescription="Icon"/>

                    <TextView
                        android:id="@+id/EnterIsSendText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@+id/EnterIsSendImage"
                        android:text="Enter is Send"
                        android:textColor="@color/black"
                        android:textColorHint="#B50101"
                        android:textSize="15sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/EnterIsSendText"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@+id/EnterIsSendImage"
                        android:hint="Enter key will send your message"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="12sp"/>

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:shadowColor="@color/teal_200" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/MediaVisibilityImage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:contentDescription="Icon"/>

                            <TextView
                                android:id="@+id/MediaVisibilityText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/MediaVisibilityImage"
                                android:text="Media Visibility"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:textColorHint="#B50101"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/MediaVisibilityImage"
                                android:layout_below="@+id/MediaVisibilityText"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:hint="Show newly downloaded media in your phone's gallery"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:textColorHint="@color/black"/>
                        </RelativeLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="6dp"
                            android:shadowColor="@color/teal_200" />

                    </LinearLayout>

                </LinearLayout>




                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/FontSizeImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:padding="2dp"
                        android:contentDescription="Icon"/>

                    <TextView
                        android:id="@+id/FontSizeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/FontSizeImage"
                        android:text="Font size"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textColorHint="#B50101"
                        />

                    <TextView
                        android:id="@+id/FontSizeSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/FontSizeImage"
                        android:layout_below="@+id/FontSizeText"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:hint="Medium"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textColorHint="@color/black"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#878686"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced chats"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/teal_700"
                    android:textStyle="bold"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="?android:attr/listPreferredItemHeightLarge"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/KeepChatsArchivedImage"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_margin="2dp"
                                android:contentDescription="Icon"
                                android:padding="2dp" />

                            <TextView
                                android:id="@+id/KeepChatsArchivedText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
                                android:layout_toRightOf="@+id/KeepChatsArchivedImage"
                                android:text="Keep chats archived"
                                android:textColor="@color/black"
                                android:textColorHint="#B50101"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/KeepChatsArchivedSelected"
                                android:layout_width="288dp"
                                android:layout_height="37dp"
                                android:layout_below="@+id/KeepChatsArchivedText"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="3dp"
                                android:layout_toRightOf="@+id/KeepChatsArchivedImage"
                                android:hint="Archived chats will remain archived when you receive a new message"
                                android:textColor="@color/black"
                                android:textColorHint="@color/black"
                                android:textSize="12sp" />



                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5">


                        <RelativeLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_toRightOf="@+id/KeepChatsArchivedSelected"
                            android:gravity="center">

                            <Switch
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="6dp"
                                android:shadowColor="@color/teal_200" />

                        </RelativeLayout>

                    </LinearLayout>




                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#878686"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/AppLanguageImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="Icon"
                        android:padding="2dp" />

                    <TextView
                        android:id="@+id/AppLanguageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@+id/AppLanguageImage"
                        android:text="App Language"
                        android:textColor="@color/black"
                        android:textColorHint="#B50101"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/AppLanguageSelected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/AppLanguageImage"
                        android:layout_below="@+id/AppLanguageText"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:hint="System default"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:textColorHint="@color/black"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ChatBackupImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="Icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_backup" />

                    <TextView
                        android:id="@+id/ChatBackupText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@+id/ChatBackupImage"
                        android:text="Chat Backup"
                        android:textColor="@color/black"
                        android:textColorHint="#B50101"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ChatHistoryImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:contentDescription="Icon"
                        android:padding="10dp"
                        android:src="@drawable/ic_history" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/ChatHistoryText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toRightOf="@+id/ChatHistoryImage"
                        android:text="Chat History"
                        android:textColor="@color/black"
                        android:textColorHint="#B50101"
                        android:textSize="15sp" />
                </RelativeLayout>



            </LinearLayout>


            </LinearLayout>



    </ScrollView>


</LinearLayout>